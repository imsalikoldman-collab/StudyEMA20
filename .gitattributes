# Нормализация текстовых файлов по умолчанию
* text=auto

# Конфигурация проектов Visual Studio с CRLF
*.sln text eol=crlf
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf

# Исходники C/C++ в Unix-стиле
*.c text eol=lf
*.cc text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf

# Скрипты
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.py text eol=lf

# Документация и маркдаун
*.md text eol=lf
*.txt text eol=lf

# Двоичные файлы
*.dll binary
*.exe binary
*.lib binary
*.pdb binary
*.zip binary
*.7z binary
*.tar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.pdf binary